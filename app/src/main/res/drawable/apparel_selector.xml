<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <solid android:color="@android:color/transparent" />

    <!-- Outline with a transparent color -->
    <stroke
        android:width="3dp"
        android:color="#A4A4A8" /> <!-- 50% transparent white color -->

    <!-- Rounded corners (optional) -->
    <corners android:radius="150dp" />
</shape>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- State when the EditText is pressed -->
<item android:color="#303032" android:state_pressed="true" />
<!-- State when the EditText is focused -->
<item android:color="#49494C" android:state_focused="true" />
<!-- Default state -->
<item android:color="#A4A4A8" />
</selector>

